algoritmo "calcular area do triangulo"
// Função :
// Autor : ccurso de algoritmos
// Data : 15/06/2022

var
a, b, r : real
inicio
  Escreval("Informe o valor da base:")//saida de dados
  leia(b)
  Escreval ("Informe o valor da altura:")
  leia(a)  //entrada de dados
  r <- (a * b)/ 2  //processamento
  Escreval(" O resultado é : " , r)
  
  escreva("*********")
fimalgoritmo
