algoritmo "semnome"
// compr = comprimento
// minusc - letras em minusculas
//Maiusc - leras em MAIUSCULAS
// Constant (pi) - nao precisa declarar a variavel
var
  n : inteiro
  palavra : caractere

inicio
  
  Escreva("Digite uma palavra:")
  leia(palavra)
  n <- compr (palavra)
  Escreva("O comprimento de " , palavra, " é:" , n)

fimalgoritmo
